// HTML5 Boilerplate v5.0 | MIT License | http://h5bp.com/

*
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

html
  color #222
  font-size 1em
  line-height 1.4

::-moz-selection
  background #b3d4fc
  text-shadow none

::selection
  background #b3d4fc
  text-shadow none

hr
  display block
  height 1px
  border 0
  border-top 1px solid #ccc
  margin 1em 0
  padding 0

audio,
canvas,
iframe,
img,
svg,
video
  vertical-align middle

fieldset
  border 0
  margin 0
  padding 0

textarea
  resize vertical

.browserupgrade
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

// ==================================================
// Helper Classes
// ==================================================

.hidden
  display none !important
  visibility hidden

.visuallyhidden
  border 0
  clip rect(0 0 0 0)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px

.visuallyhidden.focusable:active,
.visuallyhidden.focusable:focus
  clip auto
  height auto
  margin 0
  overflow visible
  position static
  width auto

.invisible
  visibility hidden

.clearfix:before,
.clearfix:after
  content " "
  display table

.clearfix
  *zoom 1

  &:after
    clear both

// ==================================================
// Custom styles
// ==================================================

.img-circle
  border-radius 50%

// A shot-head definition (image with title)
.shot-head
  position relative
  border 1px solid #ccc
  font-family Helvetica, Arial, sans-serif;
  -webkit-box-shadow 2px 3px 5px 0px rgba(0,0,0,0.13)
  -moz-box-shadow 2px 3px 5px 0px rgba(0,0,0,0.13)
  box-shadow 2px 3px 5px 0px rgba(0,0,0,0.13)
  margin 10px

  a
    display block

  .image
    display block
    text-align center

  .extra
    position absolute
    bottom 0
    height 40px
    width 100%
    background-color rgba(0, 0, 0, 0.7)
    color #EEE
    padding 5px
    padding-top 7px
    padding-left 10px
    font-size 18px

    .views
      float right
      padding-right 5px

      .icon
        margin-right 5px

// A list of shots
section.shots
  width 1024px
  margin 0 auto

  ul
    margin 0
    padding 0

    li
      float left
      list-style-type none

    .image
      img
        width 318px

// Full shot (with description)
section.shot
  width 768px
  margin 0 auto

  .shot-head
    .image
      height 300px

    .extra
      height auto
      min-height 40px

  .shot-description
    padding 15px
    padding-top 0

    p
      margin 0

    .author
      heigth 70px
      padding 5px 0 10px

      img
        width 50px

      .name
        margin-left 10px
        font-size 20px
        color #666

    .description
      color #666
      line-height 1.4


  .back
    padding 10px
    padding-bottom 0

    a
      text-decoration none
      font-weight bold
      color #666
      font-size 20px



// On tablets, change to %
@media screen and (max-width: 768px)

  section.shot
    width 100%

  section.shots
    width 100%

    ul
      li
        width 46%
        margin 2%

      .image
        img
          width 100%

// Above 650px, remove extra (descriptions)
@media screen and (max-width: 650px)

  section.shots
    .shot-head
      .extra
        display none


@media screen and (max-width: 425px)

  // Above 425px, image must be 100%
  section.shot
    .shot-head
      .image
        height auto
        min-height auto
        width 100%
        img
          width 100%